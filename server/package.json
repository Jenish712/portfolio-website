{
  "name": "portfolio-server",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsup src/index.ts --format cjs,esm --dts --out-dir dist",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "generate": "prisma generate",
    "seed": "tsx scripts/seed.ts",
    "db:use-sqlite": "copy prisma\\schema.sqlite.prisma prisma\\schema.prisma /Y && setx DATABASE_URL \"file:./dev.db\"",
    "db:migrate-sqlite": "npm run db:use-sqlite && prisma migrate dev --name init"
  },
  "dependencies": {
    "@prisma/client": "^5.15.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "prisma": "^5.15.1",
    "tsup": "^8.1.0",
    "tsx": "^4.16.2",
    "typescript": "^5.6.2"
  }
}
