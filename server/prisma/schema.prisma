generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ProjectStatus {
  draft
  published
}

model Project {
  id              String           @id @default(uuid())
  title           String
  slug            String           @unique
  category        String?
  description     String?
  longDescription String?
  summary         String?
  content         Json             @default("[]")
  tech            Json             @default("[]")
  tags            Json             @default("[]")
  highlights      Json             @default("[]")
  timeline        String?
  team            String?
  status          ProjectStatus    @default(draft)
  version         Int              @default(1)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  links           ProjectLink[]
  metrics         ProjectMetric[]
  gallery         ProjectGallery[]
  sections        DetailSection[]
  revisions       ProjectRevision[]
}

model ProjectLink {
  id        String  @id @default(uuid())
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  label     String
  url       String
  order     Int     @default(0)

  @@index([projectId, order])
}

model ProjectMetric {
  id        String  @id @default(uuid())
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  label     String
  value     String
  order     Int     @default(0)

  @@index([projectId, order])
}

model ProjectGallery {
  id        String  @id @default(uuid())
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  src       String
  alt       String
  caption   String?
  order     Int     @default(0)

  @@index([projectId, order])
}

model DetailSection {
  id        String  @id @default(uuid())
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  heading   String
  body      Json     @default("[]")
  bullets   Json?
  image     Json?
  order     Int      @default(0)

  snippets  CodeSnippet[]

  @@index([projectId, order])
}

model CodeSnippet {
  id         String        @id @default(uuid())
  section    DetailSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  sectionId  String
  title      String
  language   String
  code       String
  order      Int           @default(0)

  @@index([sectionId, order])
}

model ProjectRevision {
  id        String   @id @default(uuid())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  version   Int
  actorId   String?
  summary   String?
  diff      Json?
  createdAt DateTime @default(now())
}
